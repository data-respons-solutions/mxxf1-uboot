if TARGET_SIMPAD2

config SYS_BOARD
	default "simpad2"

config SYS_VENDOR
	default "datarespons"


config SYS_CONFIG_NAME
	default "simpad2"

config PMIC_I2C_BUS
	int
	default 0

config FACTORY_BOOT
	bool "Factory boot mode"
	default n
	help
	  Enables the factory installation boot mode

config LOGLEVEL
	int "Kernel loglevel"
	default 4

endif
